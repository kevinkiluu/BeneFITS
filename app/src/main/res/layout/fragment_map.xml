<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.ddk.benefits.MapActivity"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/B_container" />

    <LinearLayout
        android:id="@+id/B_container"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/B_gyms"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Gyms" />

        <Button
            android:id="@+id/B_parks"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/B_gyms"
            android:onClick="onClick"
            android:text="Parks" />

        <Button
            android:id="@+id/B_trails"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/B_parks"
            android:onClick="onClick"
            android:text="Trails" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
